{
  "compilerOptions": {
    "target": "ES2020",                          // Specifies the target ECMAScript version
    "module": "commonjs",                        // Specifies the module system
    "lib": ["ES2020"],                           // Specifies the library files to be included in the compilation
    "outDir": "./dist",                          // Redirects output structure to the directory
    "rootDir": "./src",                          // Specifies the root directory of input files
    "strict": true,                              // Enable all strict type-checking options
    "moduleResolution": "node",                  // Specifies module resolution strategy
    "esModuleInterop": true,                     // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                        // Skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true     // Disallow inconsistently-cased references to the same file
  },
  "include": [
    "src/**/*.ts"                                // Include all .ts files in the src directory and its subdirectories
  ],
  "exclude": [
    "node_modules",                              // Exclude node_modules from compilation
    "dist"                                       // Exclude dist from compilation
  ]
}
